<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Replace</item>
    </style>

    <style name="Replace">
        <item name="android:activityOpenExitAnimation">@anim/anim_replace</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_replace</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_replace</item>
        <item name="android:taskOpenEnterAnimation">@anim/anim_replace</item>
        <item name="android:taskOpenExitAnimation">@anim/anim_replace</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppLogoStyle">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:backgroundTint">@color/transparentWhite</item>
        <item name="android:text">@string/app_name_without_plus</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">@dimen/logo_background_edge_padding</item>
        <item name="android:paddingEnd">@dimen/logo_background_edge_padding</item>
    </style>
</resources>