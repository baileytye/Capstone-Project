<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background"
        android:paddingBottom="@dimen/card_padding">

        <EditText
            android:id="@+id/et_requirement_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_padding"
            android:layout_marginTop="@dimen/card_padding"
            android:layout_marginEnd="@dimen/card_padding"
            android:background="@null"
            android:hint="@string/hint_requirement_name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/et_requirement_name" />

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_padding"
            android:layout_marginTop="@dimen/card_heading_separation"
            android:text="@string/label_type"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_requirement_name" />

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_padding"
            android:backgroundTint="@color/grey3"
            android:entries="@array/type_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/label_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/label_type"
            app:layout_constraintTop_toTopOf="@+id/label_type" />

        <TextView
            android:id="@+id/label_importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_heading_separation"
            android:text="@string/label_importance"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            app:layout_constraintStart_toStartOf="@+id/label_type"
            app:layout_constraintTop_toBottomOf="@+id/label_type" />

        <Spinner
            android:id="@+id/sp_importance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey3"
            android:entries="@array/importance_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/label_importance"
            app:layout_constraintEnd_toEndOf="@+id/sp_type"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/label_importance"
            app:layout_constraintTop_toTopOf="@+id/label_importance" />

        <TextView
            android:id="@+id/label_expected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_heading_separation"
            android:text="@string/label_expected"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            app:layout_constraintStart_toStartOf="@+id/label_importance"
            app:layout_constraintTop_toBottomOf="@+id/label_importance" />

        <EditText
            android:id="@+id/et_expected"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_expected"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/card_notes_padding"
            android:paddingEnd="@dimen/card_notes_padding"
            app:layout_constraintBottom_toBottomOf="@+id/label_expected"
            app:layout_constraintEnd_toEndOf="@+id/sp_importance"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/label_expected"
            app:layout_constraintTop_toTopOf="@+id/label_expected" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_background"
            android:padding="@dimen/card_notes_padding"
            app:layout_constraintEnd_toEndOf="@+id/et_expected"
            app:layout_constraintStart_toStartOf="@+id/label_expected"
            app:layout_constraintTop_toBottomOf="@+id/et_expected">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_et_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="@dimen/card_notes_padding"
                android:background="@null"
                android:hint="@string/hint_notes" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/ib_delete_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_heading_separation"
            android:background="@null"
            android:tint="@color/red500"
            app:layout_constraintStart_toStartOf="@+id/text_input_layout_notes"
            app:layout_constraintTop_toBottomOf="@+id/text_input_layout_notes"
            app:srcCompat="@drawable/ic_delete_24dp" />

        <ImageButton
            android:id="@+id/ib_save_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/text_input_layout_notes"
            app:layout_constraintTop_toTopOf="@+id/ib_delete_requirement"
            app:srcCompat="@drawable/ic_check_24dp" />

        <ImageButton
            android:id="@+id/ib_edit_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:tint="@color/grey3"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/ib_save_requirement"
            app:layout_constraintEnd_toEndOf="@+id/ib_save_requirement"
            app:layout_constraintStart_toStartOf="@+id/ib_save_requirement"
            app:layout_constraintTop_toTopOf="@+id/ib_save_requirement"
            app:srcCompat="@drawable/ic_edit_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>