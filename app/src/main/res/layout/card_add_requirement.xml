<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background"
        android:paddingBottom="16dp">

        <EditText
            android:id="@+id/et_requirement_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:hint="@string/hint_requirement_name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/et_requirement_name" />

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/label_type"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_requirement_name" />

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/grey3"
            android:entries="@array/type_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/label_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/label_type"
            app:layout_constraintTop_toTopOf="@+id/label_type" />

        <TextView
            android:id="@+id/label_importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/label_importance"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/label_type"
            app:layout_constraintTop_toBottomOf="@+id/label_type" />

        <Spinner
            android:id="@+id/sp_importance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/grey3"
            android:entries="@array/importance_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/label_importance"
            app:layout_constraintEnd_toEndOf="@+id/sp_type"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/label_importance"
            app:layout_constraintTop_toTopOf="@+id/label_importance" />

        <TextView
            android:id="@+id/label_expected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/label_expected"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            app:layout_constraintStart_toStartOf="@+id/label_importance"
            app:layout_constraintTop_toBottomOf="@+id/label_importance" />

        <EditText
            android:id="@+id/et_expected"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="Expected"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/label_expected"
            app:layout_constraintEnd_toEndOf="@+id/sp_importance"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/label_expected"
            app:layout_constraintTop_toTopOf="@+id/label_expected" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@+id/et_expected"
            app:layout_constraintStart_toStartOf="@+id/label_expected"
            app:layout_constraintTop_toBottomOf="@+id/et_expected">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Notes" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_24dp"
            android:elevation="0dp"
            android:text="Advanced"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

        <Button
            android:id="@+id/bt_remove"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:elevation="0dp"
            android:gravity="center"
            android:text="Remove"
            android:textAppearance="@style/CardItemHeadingTextStyle"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout"
            app:layout_constraintTop_toTopOf="@+id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>