<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_requirement_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/placeholder_requirement_label"
        android:textAppearance="@style/CardItemHeadingTextStyle" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="8dp"
        android:paddingStart="0dp">

        <EditText
            android:id="@+id/et_requirement_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end|center_horizontal"
            android:ems="10"
            android:hint="@string/hint_value"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/cb_requirement_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical" />

        <Spinner
            android:id="@+id/sp_requirement_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal|center_vertical"
            android:entries="@array/averages" />

        <RatingBar
            android:id="@+id/rb_requirement_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end" />
    </FrameLayout>

</LinearLayout>