<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/bottom_sheet_image_select"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_take_photo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_camera_alt_24dp"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:text="Take Photo"
        android:textAppearance="@style/CardItemHeadingTextStyle" />

    <Button
        android:id="@+id/bt_choose_image"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_image_24dp"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:text="Choose Image"
        android:textAppearance="@style/CardItemHeadingTextStyle" />
</LinearLayout>