<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="0dp"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/flat_card_edge_margin"
        android:paddingTop="@dimen/card_heading_separation_one_and_half"
        android:paddingEnd="@dimen/flat_card_edge_margin"
        android:paddingBottom="@dimen/card_heading_separation_one_and_half">

        <TextView
            android:id="@+id/tv_requirement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_requirement"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            style="@style/MyArrowButtonStyle"
            app:layout_constraintBottom_toBottomOf="@+id/tv_requirement_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_requirement_name"
            android:contentDescription="@string/content_description_requirement_details_arrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>