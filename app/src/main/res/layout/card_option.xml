<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_edges"
    android:layout_marginLeft="@dimen/card_margin_edges"
    android:layout_marginRight="@dimen/card_margin_edges"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_card_header"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorPrimaryLight"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_item_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/placeholder_item_name"
            android:textAppearance="@style/CardHeadingTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_card_header" />

        <TextView
            android:id="@+id/tv_item_card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/placeholder_price"
            android:textAppearance="@style/CardSubHeadingTextStyle"
            app:layout_constraintStart_toStartOf="@+id/tv_item_card_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_card_title" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_card_price" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_padding"
            android:layout_marginEnd="@dimen/card_padding"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:listitem="@layout/list_item_requirement" />


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_requirements" />

        <Button
            android:id="@+id/bt_rule_out"
            style="@style/MyButtonStyle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/card_padding"
            android:layout_marginTop="@dimen/card_heading_separation"
            android:layout_marginBottom="@dimen/card_padding"
            android:backgroundTint="@color/red500"
            android:text="@string/button_rule_out"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_requirements" />

        <Button
            android:id="@+id/bt_details"
            style="@style/MyButtonStyle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/card_padding"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/button_details"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/bt_rule_out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_rule_out"
            app:layout_constraintVertical_bias="0.0" />

        <RatingBar
            android:id="@+id/rb_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:numStars="5"
            app:layout_constraintBottom_toBottomOf="@+id/tv_rating"
            app:layout_constraintEnd_toEndOf="@+id/bt_details"
            app:layout_constraintTop_toTopOf="@+id/tv_rating" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="4.78"
            android:textAppearance="@style/CardSubHeadingTextStyle"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_card_price"
            app:layout_constraintEnd_toStartOf="@+id/rb_rating"
            app:layout_constraintStart_toStartOf="@+id/bt_details"
            app:layout_constraintTop_toTopOf="@+id/tv_item_card_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
