<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/grey3</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!--AppbarLayout Style-->
    <style name="MyAppbarLayoutStyle" >
        <item name="elevation">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@null</item>
    </style>

    <!--Toolbar Style-->
    <style name="MyToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@drawable/toolbar</item>
        <item name="elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!--Floating Action Button Style-->
    <style name="MyFabStyle">
        <item name="android:elevation">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/grey4</item>
        <item name="android:tint">@color/grey3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Card Heading Text Style-->
    <style name="CardHeadingTextStyle" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Card Item Heading-->
    <style name="CardItemHeadingTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <!--Card Sub Heading Text Style-->
    <style name="CardSubHeadingTextStyle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
