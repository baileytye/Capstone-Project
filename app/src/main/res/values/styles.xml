<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextStyle</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <!--License Activity Theme-->
    <style name="LicenseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!--Divider Style-->
    <style name="MyDividerStyle">
        <item name="android:background">@color/grey200</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--AppbarLayout Style-->
    <style name="MyAppbarLayoutStyle" parent="AppTheme.AppBarOverlay">
        <item name="android:background">@color/white</item>
    </style>

    <!--Toolbar Style-->
    <style name="MyToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!--Frame Spinner Style-->
    <style name="FrameSpinnerStyle">
        <item name="android:paddingEnd">0.5dp</item>
        <item name="android:paddingStart">0.5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FrameSpinnerTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Floating Action Button Style-->
    <style name="MyFabStyle">
        <item name="android:elevation">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:tint">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MyFabMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!--Rating Bar Small Style-->
    <style name="MyRatingBarStyleSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>

    <!--Button Style-->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:background">@drawable/bg_button_with_ripple</item>
        <item name="android:backgroundTint">@color/grey400</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MyBorderlessButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MyArrowButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="srcCompat">@drawable/ic_keyboard_arrow_right_24dp</item>
        <item name="android:tint">@color/grey600</item>
    </style>

    <!--Bottom Sheet Style-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- - - - - - - - Text Styles - - - - - - - -->

    <!--Toolbar Text Style-->
    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--Action Menu Text Style-->
    <style name="ActionMenuTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Button Text Style-->
    <style name="ButtonTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EmptyMessageTextStyle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/grey300</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
